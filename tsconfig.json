{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
  "types": ["astro/client", "vite/client", "node"],
    "strict": false,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.astro",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}